{
  "source": [
    "tokens_src/jsonTokens/themes/Sofia/**/*.json"
  ],
  "platforms": {
    "compose": {
      "transforms": [
        "attribute/cti",
        "name/cti/snake",
        "name/composeColorName",
        "name/composeColorReference",
        "name/composeElevation",
        "name/composeFontFamily",
        "name/composeFontWeight",
        "size/px_to_dp",
        "size/px_to_sp",
        "size/composeLineHeight"
      ],
      "transformGroup": "compose",
      "buildPath": "pegasusdesignsystemandroid/src/main/java/br/com/cogna/pegasusdesignsystemandroid/brands/sofia/tokens/",
      "files": [
        {
          "destination": "SofiaPaletteTokens.kt",
          "format": "compose/object",
          "className": "SofiaPaletteTokens",
          "packageName": "br.com.cogna.pegasusdesignsystemandroid.brands.sofia.tokens",
          "filter": {
            "attributes": {
              "category": "palette"
            }
          }
        },

        {
          "destination": "SofiaColorSchemesTokens.kt",
          "format": "compose/object",
          "className": "SofiaColorSchemesTokens",
          "packageName": "br.com.cogna.pegasusdesignsystemandroid.brands.sofia.tokens",
          "filter": {
            "attributes": {
              "type": "color"
            }
          }
        },

        {
          "destination": "SofiaSpacingTokens.kt",
          "format": "compose/object",
          "className": "SofiaSpacingTokens",
          "packageName": "br.com.cogna.pegasusdesignsystemandroid.brands.sofia.tokens",
          "type": "float",
          "filter": {
            "attributes": {
              "category": "spacing"
            }
          }
        },

        {
          "destination": "SofiaBorderTokens.kt",
          "format": "compose/object",
          "className": "SofiaBorderTokens",
          "packageName": "br.com.cogna.pegasusdesignsystemandroid.brands.sofia.tokens",
          "type": "float",
          "filter": {
            "attributes": {
              "category": "border"
            }
          }
        },

        {
          "destination": "SofiaElevationTokens.kt",
          "format": "compose/object",
          "className": "SofiaElevationTokens",
          "packageName": "br.com.cogna.pegasusdesignsystemandroid.brands.sofia.tokens",
          "filter": {
            "attributes": {
              "category": "elevation"
            }
          }
        },

        {
          "destination": "SofiaFontSizeTokens.kt",
          "format": "compose/object",
          "className": "SofiaFontSizeTokens",
          "packageName": "br.com.cogna.pegasusdesignsystemandroid.brands.sofia.tokens",
          "filter": {
            "attributes": {
              "category": "fontSize"
            }
          }
        },

        {
          "destination": "SofiaLineHeightTokens.kt",
          "format": "compose/object",
          "className": "SofiaLineHeightTokens",
          "packageName": "br.com.cogna.pegasusdesignsystemandroid.brands.sofia.tokens",
          "filter": {
            "attributes": {
              "category": "lineHeight"
            }
          }
        },

        {
          "destination": "SofiaFontFamilyTokens.kt",
          "format": "compose/object",
          "className": "SofiaFontFamilyTokens",
          "packageName": "br.com.cogna.pegasusdesignsystemandroid.brands.sofia.tokens",
          "options": {
            "outputReferences": true
          },
          "filter": {
            "attributes": {
              "category": "fontFamily"
            }
          }
        },

        {
          "destination": "SofiaFontWeightTokens.kt",
          "format": "compose/object",
          "className": "SofiaFontWeightTokens",
          "packageName": "br.com.cogna.pegasusdesignsystemandroid.brands.sofia.tokens",
          "type": "float",
          "options": {
            "outputReferences": true
          },
          "filter": {
            "attributes": {
              "category": "fontWeight"
            }
          }
        },

        {
          "destination": "SofiaTypographyTokens.kt",
          "format": "compose/typography",
          "className": "SofiaTypographyTokens",
          "packageName": "br.com.cogna.pegasusdesignsystemandroid.brands.sofia.tokens",
          "options": {
            "outputReferences": true
          },
          "filter": {
            "attributes": {
              "category": "typography"
            }
          }
        }
      ]
    },
    "android": {
      "transforms": [
        "attribute/cti",
        "name/cti/snake",
        "color/hex8android",
        "size/sp",
        "size/dp"
      ],
      "transformGroup": "android",
      "buildPath": "pegasusdesignsystemandroid/src/main/res/values/",
      "files": [
        {
          "destination": "sofia_tokens_dimens.xml",
          "format": "android/fontDimens"
        },
        {
          "destination": "sofia_tokens_colors.xml",
          "format": "android/colors"
        }
      ],
      "options": {
        "showFileHeader": false
      }
    }
  }
}
